<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.happinessperspective.home.HomeFragment"
        android:label="Happiness Perspective"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_homeFragment_to_newEntry"
            app:destination="@id/newEntryFragment" />
    </fragment>

    <fragment
        android:id="@+id/newEntryFragment"
        android:name="com.example.happinessperspective.newEntry.NewEntryFragment"
        android:label="New Entry"
        tools:layout="@layout/new_entry_fragment">
        <action
            android:id="@+id/action_newEntryFragment_to_currentMonthDetailsFragment"
            app:destination="@id/currentMonthDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/currentMonthDetailsFragment"
        android:name="com.example.happinessperspective.details.CurrentMonthDetailsFragment"
        android:label="Current Month"
        tools:layout="@layout/current_month_details_fragment" />

</navigation>